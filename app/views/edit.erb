<h1>Edit Your Recipe Here!</h1>
<form action="/recipes/<%= @recipe.id %>" method="post">
  <input type="hidden" name="_method" value="patch">
  <p>
    <label for="name">Dish Name: </label>
    <input type="text" name="name" id="name" value="<%= @recipe.name %>">
  </p>
  <p>
    <label for="ingredients">Ingredients: </label>
    <input type="text" name="ingredients" id="ingredients" value="<%= @recipe.ingredients %>">
  </p>
  <p>
    <label for="time">Cook Time: </label>
    <input type="text" name="cook_time" id="time" value="<%= @recipe.cook_time %>">
  </p>
  <input type="submit" value="Edit">
</form>

<a href="/recipes/<%= @recipe.id %>">Back to Recipe</a>